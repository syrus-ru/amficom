HOME=.

include ..\make.inc

TARGET=$(LIB)\mapclient.jar
TARGET_CLASS_LIST=src_mapclient.txt
TARGET_SRC=$(LIBSRC)\mapclientsource.zip
TARGET_DOC=$(LIBDOC)\mapclientdoc.zip

SERVERCP=$(LIB)\corba.jar;$(LIB)\corbaportable.jar
CLIENTCP=$(LIB)\util.jar;$(LIB)\generalclient.jar;$(LIB)\general.jar;$(LIB)\administrate.jar;$(LIB)\configuration.jar;$(LIB)\configureclient.jar;$(LIB)\filter.jar;$(LIB)\map.jar

CLASSPATH=$(SERVERCP);$(CLIENTCP);$(LAYOUTCP);$(REPORTCP)

.PHONY:	$(TARGET)

$(TARGET):	clean impl loc javadoc jar

jar:
	$(ARCHIVER) -cf $(TARGET) -C $(CLASSES) com
	$(ARCHIVER) -cf $(TARGET_SRC) -C $(SRC) com
	$(ARCHIVER) -cf $(TARGET_DOC) -C $(DOCS) .

impl:
	$(COMPILER) \
		-d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		@$(TARGET_CLASS_LIST)

loc:
	copy /y \
		src\com\syrus\AMFICOM\Client\General\Lang\map_ru.properties \
		$(CLASSES)\com\syrus\AMFICOM\Client\General\Lang

javadoc:
	$(JAVADOCGENERATOR) com

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
