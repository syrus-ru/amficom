HOME=.
LIB=$(HOME)\..\AMFICOMCommon
LIBSRC=$(HOME)\..\AMFICOMCommon\src
EXTLIB=d:\lib91
ORACLE_HOME=d:\oracle\ora91
SRC=$(HOME)\src
CLASSES=$(HOME)\classes
JAVADOCDIR=$(HOME)\javadoc
JAVA_HOME=d:\java\j2sdk1.4.1_03
LIBDOC=$(HOME)\..\AMFICOMCommon\javadoc

JIKES= d:\java\jikes-1.21\bin\jikes.exe
JIKESFLAGS= \
	-bootclasspath $(JAVA_HOME)/jre/lib/rt.jar \
	-deprecation \
	+E \
	+DR=$(CLASSES)\_dependencies.txt \
	+F \
	+P \
	+Peffective-java \
	+Pmodifier-order \
	+Predundant-modifiers \
	+Pno-switchcheck \
	+Pnaming-convention \
	+T=4

JAVAC=D:\java\j2sdk_nb\j2sdk1.4.2\bin\javac -source 1.4 -target 1.4 -nowarn
JAR=jar
JAVADOC=javadoc \
		-private \
		-sourcepath $(SRC) \
		-classpath $(CLASSES) \
		-source 1.4 \
		-encoding cp1251 \
		-d $(JAVADOCDIR) \
		-version \
		-author \
		-docfilessubdirs \
		-splitindex \
		-docencoding cp1251

#COMPILER=$(JIKES) $(JIKESFLAGS)
COMPILER=$(JAVAC)

TARGET=$(LIB)\mapclient.jar
TARGET_CLASS_LIST=src_mapclient.txt
TARGET_SRC=$(LIBSRC)\mapclientsource.jar
TARGET_JAVADOC=$(LIBDOC)\mapclientdoc.jar

SERVERCP=$(LIB)\corba.jar
CLIENTCP=$(LIB)\util.jar;$(LIB)\generalclient.jar;$(LIB)\general.jar;$(LIB)\administrate.jar;$(LIB)\configureclient.jar;$(LIB)\corbaportable.jar;$(LIB)\filter.jar

LAYOUTCP=$(EXTLIB)\layout.jar;$(EXTLIB)\kunststoff.jar
SPATIALCP=$(EXTLIB)\ofx.spatialfx.jar
REPORTCP=$(EXTLIB)\jfreechartK.jar
JGRAPHCP=$(EXTLIB)\jgraphpad.jar

CLASSPATH=$(SERVERCP);$(CLIENTCP);$(LAYOUTCP);$(REPORTCP);$(JGRAPHCP);$(SPATIALCP)

.PHONY:	$(TARGET)

$(TARGET):	clean impl loc jar

javadoc:
	$(JAVADOC) com

jar:
	$(JAR) -cf $(TARGET) -C $(CLASSES) com
	$(JAR) -cf $(TARGET_SRC) -C $(SRC) com
	$(JAR) -cf $(TARGET_JAVADOC) -C $(JAVADOCDIR) .

impl:
	$(COMPILER) -d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		@$(TARGET_CLASS_LIST)

loc:
	copy /y \
		src\com\syrus\AMFICOM\Client\General\Lang\map_ru.properties \
		$(CLASSES)\com\syrus\AMFICOM\Client\General\Lang

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
