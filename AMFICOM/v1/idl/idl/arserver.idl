#ifndef ARSERVER_IDL
#define ARSERVER_IDL

#include "configuration.idl"
#include "resource.idl"

module com {
	module syrus {
		module AMFICOM {
			module arserver {
				module corba {
					interface ARServer:
							general::corba::IdentifierGeneratorServer,
							general::corba::Verifiable {
						void delete(in general::corba::IdentifierSeq ids,
								in security::corba::SessionKey sessionKey)
							raises (general::corba::AMFICOMRemoteException);

						void receiveImageResources(
								in resource::corba::ImageResourceSeq imageResources,
								in boolean force,
								in security::corba::SessionKey sessionKey)						 		   
							raises (general::corba::AMFICOMRemoteException);

						resource::corba::ImageResourceSeq transmitImageResources(
								in general::corba::IdentifierSeq ids,
								in security::corba::SessionKey sessionKey)
							raises (general::corba::AMFICOMRemoteException);

						resource::corba::ImageResourceSeq transmitImageResourcesButIdsCondition(
								in general::corba::IdentifierSeq ids,
								in security::corba::SessionKey sessionKey,
								in general::corba::StorableObjectCondition condition)
							raises (general::corba::AMFICOMRemoteException);
	
						general::corba::IdentifierSeq transmitRefreshedResourceObjects(
								in general::corba::StorableObjectSeq storableObjects,
								in security::corba::SessionKey sessionKey)
							raises (general::corba::AMFICOMRemoteException);
					};
				};
			};
		};
	};
};

#endif // ARSERVER_IDL
