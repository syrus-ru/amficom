	typedef sequence <Rule_Transferable> RuleSeq_Transferable;

	struct EventSourceType_Transferable
	{
		wstring id;
		wstring name;
		RuleSeq_Transferable rules;
	};
	typedef sequence <EventSourceType_Transferable> EventSourceTypeSeq_Transferable;
