		wstring id;
		wstring description;
		wstring source_id;
		wstring type_id;
		wstring descriptor;
		General::EventStatus status;
		long long created;
	};
	typedef sequence <Event_Transferable> EventSeq_Transferable;

// Maintenance configuring

