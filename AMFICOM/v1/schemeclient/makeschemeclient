HOME=.

include ..\make.inc

TARGET=$(LIB)\schemeclient.jar
TARGET_RUN=$(LIB)\run\schemeclientrun.jar
TARGET_CLASS_LIST=src_schemeclient.txt
TARGET_SRC=$(LIBSRC)\schemeclientsource.zip
TARGET_DOC=$(LIBDOC)\schemeclientdoc.zip

SERVERCP=$(LIB)\corba.jar;$(LIB)\corbaportable.jar
CLIENTCP=$(LIB)\resource.jar;$(LIB)\util.jar;$(LIB)\filter.jar;$(LIB)\map.jar;$(LIB)\general.jar;$(LIB)\scheme.jar;$(LIB)\configuration.jar;$(LIB)\admin.jar;$(LIB)\generalclient.jar;$(LIB)\configureclient.jar;$(LIB)\adminclient.jar;$(LIB)\mapclient.jar

CLASSPATH=$(SERVERCP);$(CLIENTCP);$(LAYOUTCP);$(REPORTCP);$(JGRAPHCP)

.PHONY:	$(TARGET)

$(TARGET):	clean impl loc javadoc jar

jar:
	$(ARCHIVER) -cf $(TARGET) -C $(CLASSES) com
#	$(ARCHIVER) -cf $(TARGET_RUN) -C $(CLASSES) com\syrus\AMFICOM\Client\Schematics\Scheme\SchemeEditorRun.class com\syrus\AMFICOM\Client\Schematics\Elements\ElementsEditorRun.class
	$(ARCHIVER) -cf $(TARGET_SRC) -C $(SRC) com
	$(ARCHIVER) -cf $(TARGET_DOC) -C $(DOCS) .

impl:
	$(COMPILER) \
		-d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		@$(TARGET_CLASS_LIST)

loc:
	copy /y \
		src\com\syrus\AMFICOM\Client\General\Lang\*.properties \
		$(CLASSES)\com\syrus\AMFICOM\Client\General\Lang

javadoc:
	$(JAVADOCGENERATOR) com

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
