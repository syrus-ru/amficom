HOME=.
LIB=$(HOME)\..\AMFICOMCommon
LIBSRC=$(HOME)\..\AMFICOMCommon\src
EXTLIB=d:\lib91
ORACLE_HOME=d:\oracle\ora91
SRC=$(HOME)\src
CLASSES=$(HOME)\classes

JAVAC=D:\java\j2sdk_nb\j2sdk1.4.2\bin\javac -source 1.4 -target 1.4 -nowarn
JAR=jar

TARGET=$(LIB)\scheme.jar
TARGET_RUN=$(LIB)\run\schemerun.jar
TARGET_CLASS_LIST=src_scheme.txt
TARGET_SRC=$(LIBSRC)\schemesource.jar

SERVERCP=$(LIB)\corba.jar
CLIENTCP=$(LIB)\util.jar;$(LIB)\generalclient.jar;$(LIB)\administrate.jar;$(LIB)\configureclient.jar;$(LIB)\corbaportable.jar;$(LIB)\filter.jar;$(LIB)\map.jar

LAYOUTCP=$(EXTLIB)\layout.jar;$(EXTLIB)\kunststoff.jar
REPORTCP=$(EXTLIB)\jfreechartK.jar
JGRAPHCP=$(EXTLIB)\jgraphpad.jar

CLASSPATH=$(SERVERCP);$(CLIENTCP);$(LAYOUTCP);$(REPORTCP);$(JGRAPHCP)

.PHONY:	$(TARGET)

$(TARGET):	clean impl loc jar

jar:
	$(JAR) -cf $(TARGET) -C $(CLASSES) com
#	$(JAR) -cf $(TARGET_RUN) -C $(CLASSES) com\syrus\AMFICOM\Client\Schematics\Scheme\SchemeEditorRun.class com\syrus\AMFICOM\Client\Schematics\Elements\ElementsEditorRun.class
	$(JAR) -cf $(TARGET_SRC) -C $(SRC) com

impl:
	$(JAVAC) -d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		@$(TARGET_CLASS_LIST)

loc:
	copy /y \
		src\com\syrus\AMFICOM\Client\General\Lang\*.properties \
		$(CLASSES)\com\syrus\AMFICOM\Client\General\Lang

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
