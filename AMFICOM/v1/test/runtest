#!/bin/bash

# This script can be used to run tests from console

JUNITCLASSPATH=$ECLIPSE_HOME/plugins/org.junit_3.8.1/junit.jar
JDBCCLASSPATH=$ORACLE_HOME/jdbc/lib/ojdbc14.jar:$ORACLE_HOME/jdbc/lib/orai18n.jar

LIB=../lib
EXTLIB=../../extlib
APPCLASSPATH=$LIB/util.jar:$LIB/general.jar:$LIB/administration.jar:$LIB/configuration.jar:$LIB/measurement.jar:$LIB/event.jar:$LIB/csbridge.jar
EXTCLASSPATH=$EXTLIB/trove.jar

java -ea -classpath $APPCLASSPATH:$EXTCLASSPATH:$JDBCCLASSPATH:$JUNITCLASSPATH:./classes junit.textui.TestRunner com.syrus.AMFICOM.mcm.TestMCM
