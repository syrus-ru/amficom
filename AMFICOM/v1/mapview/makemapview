HOME=.

include ..\make.inc

TARGET=$(LIB)\mapview.jar
TARGET_SRC=$(LIBSRC)\mapviewsource.zip
TARGET_DOC=$(LIBDOC)\mapviewdoc.zip

SERVERCP=$(LIB)\util.jar;$(LIB)\general.jar;$(LIB)\admin.jar;$(LIB)\resource.jar;$(LIB)\config.jar;$(LIB)\map.jar;$(LIB)\scheme.jar;$(LIB)\generalxml.jar;$(LIB)\mapxml.jar

CLASSPATH=$(SERVERCP);$(XMLBEANSCP)

.PHONY:	$(TARGET)

$(TARGET):	clean corba impl javadoc jar

jar:
	$(ARCHIVER) -cf $(TARGET) -C $(CLASSES) com
	$(ARCHIVER) -cf $(TARGET_SRC) -C $(SRC) com
	$(ARCHIVER) -cf $(TARGET_DOC) -C $(DOCS) .

impl:
	$(COMPILER) \
		-d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		$(SRC)\com\syrus\AMFICOM\mapview\*.java

corba:
	$(IDLTRANSLATOR) $(IDL)\mapview.idl
	$(COMPILER) \
		-d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
			$(SRC)\com\syrus\AMFICOM\mapview\corba\*.java

javadoc:
	$(JAVADOCGENERATOR) com

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
