HOME=.
LIB=$(HOME)\..\AMFICOMCommon
EXTLIB=d:\lib91
ORACLE_HOME=d:\oracle\ora91
SRC=$(HOME)\src
CLASSES=$(HOME)\classes
LIBSRC=$(HOME)\..\AMFICOMCommon\src

JAVAC=D:\java\j2sdk_nb\j2sdk1.4.2\bin\javac -source 1.4 -target 1.4 -nowarn
JAR=jar

TARGET=$(LIB)\administrate.jar
TARGET_DLL=$(LIB)\dll\administrate.jar
TARGET_RUN=$(LIB)\run\administraterun.jar
TARGET_CLASS_LIST=src_admin.txt
TARGET_SRC=$(LIBSRC)\administratesource.jar

SERVERCP=$(LIB)\corba.jar
CLIENTCP=$(LIB)\util.jar;$(LIB)\generalclient.jar;$(LIB)\corbaportable.jar;$(LIB)\filter.jar

LAYOUTCP=$(EXTLIB)\layout.jar;$(EXTLIB)\kunststoff.jar

CLASSPATH=$(SERVERCP);$(CLIENTCP);$(LAYOUTCP)

.PHONY:	$(TARGET)

$(TARGET):	clean impl loc jar

jar:
	$(JAR) -cf $(TARGET) -C $(CLASSES) com
	$(JAR) -cf $(TARGET_RUN) -C $(CLASSES) com\syrus\AMFICOM\Client\Administrate\AdministrateRun.class
	$(JAR) -cf $(TARGET_SRC) -C $(SRC) com

impl:
	$(JAVAC) -d $(CLASSES) \
		-classpath $(CLASSPATH) \
		-sourcepath $(SRC) \
		@$(TARGET_CLASS_LIST)

loc:
	copy \
		src\com\syrus\AMFICOM\Client\General\Lang\admin_ru.properties \
		$(CLASSES)\com\syrus\AMFICOM\Client\General\Lang

clean:
	rm -rf $(CLASSES)\com
	rm -f $(TARGET) $(TARGET_SRC)
